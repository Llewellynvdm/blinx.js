{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    },
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es5",
    "incremental": true,
    "types": [],
    "esModuleInterop": true,
    // Linting
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  }
}
