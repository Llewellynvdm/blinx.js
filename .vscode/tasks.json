  "version": "0.1.0",
  "command": "${workspaceRoot}/node_modules/.bin/tsc",
  "isShellCommand": true,
  "args": [],
  "tasks": [
    {
      "taskName": "test",
      "args": [
        "-w",
        "-p",
        "./tsconfig.json",
        "--noEmit"
      ],
      "showOutput": "silent",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "isTestCommand": true,
      "suppressTaskName": true
    }
  ]
}
