{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "files.exclude": {},
  "search.exclude": {
    "dist": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  //-- Extensions
  // Settings for wayou.vscode-todo-highlight (region & TODO highlighting)
  "todohighlight.keywords": [
    // See https://code.visualstudio.com/docs/extensionAPI/vscode-api#_a-namedecorationrenderoptionsaspan-classcodeitem-id280decorationrenderoptionsspan
    "TEMP:",
    "NOTE:",
    "NB:",
    {
      "text": "//#region",
      "color": "#55c",
      "backgroundColor": "editor.background",
      "overviewRulerColor": "#55c",
      "isWholeLine": true,
      "borderColor": "#55c",
      "borderWidth": "1px 0 0 0",
      "borderStyle": "solid"
    },
    {
      "text": "//#endregion",
      "color": "#33a",
      "backgroundColor": "editor.background",
      "overviewRulerColor": "#33a",
      "isWholeLine": true,
      "borderColor": "#33a",
      "borderWidth": "0 0 1px 0",
      "borderStyle": "solid"
    }
  ]
}
